@model RegistrationwithAjax.Models.Employee;
@{
    ViewData["Title"] = "UploadImage";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
             <div class="card bg-primary">
        <div class="card-header">
        <div>
            <h3 class="text-center text-danger">Upload Image</h3>
        </div>
        <div class="card-body">
            <form method="post"asp-action="Register"enctype="multipart/form-data" asp-controller="Account">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text"asp-for="Name"class="form-control"placeholder="Enter Name" />
                    <span class="text-danger"asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text"asp-for="Email"class="form-control"placeholder="Enter Name" />
                    <span class="text-danger"asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <input type="text"asp-for="Gender"class="form-control"placeholder="Enter Name" />
                    <span class="text-danger"asp-validation-for="Gender"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="text"asp-for="Password"class="form-control"placeholder="Enter Name" />
                    <span class="text-danger"asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath"></label>
                    <input type="file"asp-for="ImagePath"class="form-control"/>
                    <span class="text-danger"asp-validation-for="ImagePath"></span>
                </div>
                <div class="form-group">
                    <input type="submit"class="btn btn-sm btn-primary float-right" value="Save"/>
                </div>
            </form>
        </div>
        
    </div>
</div>
</div>
</div>
</div>
